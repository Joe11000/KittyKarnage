<%= @moves = 8 %>

<%= form_tag('/JStakesOverThisPart', method: "post") do %>

  <% (@moves - 1).times do |move_num| %>

    <%= label_tag(("move_#{move_num}").to_sym, "move #{move_num} : ") %>
   <%= select_tag(("move_#{@moves}").to_sym, options_for_select(["Walk", "Wait", "Rotate Left", "Rotate Right" ], "Walk" ))%>

    <br>
  <% end %>

   <%=label_tag(("move_#{@moves}").to_sym, "attack : ") %>
   <%= select_tag(("move_#{@moves}").to_sym, options_for_select(["FlameThrower", "Cloak and Dagger", "Lightning Strike", "Drunken Headbutt"], "FlameThrower" ))%>
<% end %>



