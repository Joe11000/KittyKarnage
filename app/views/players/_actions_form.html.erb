@moves = 8

<%= form_tag(player_perform_actions()) do %>

  <% (@moves - 1).times do |move_num| %>

   <%= label_tag(("move_#{move_num}").to_sym, "move #{move_num}") 
   select_tag(("move_#{move_num}").to_sym, options_for_select("Walk", "Wait", "Rotate Left", "Rotate Right" ))%>
   <br>

   <%=label_tag(:attack, "attack:") 
   select_tag(:attack, options_for_select("FlameThrower", "Cloak and Dagger", "Lightning Strike", "Drunken Headbutt" ))%>

<% end %>
