<% @moves = 8 %>

<%= form_tag('/JStakesOverThisPart', method: "post") do %>

  <% (@moves).times do |move_num| %>

    <%= label_tag(("#{locals[:player_id]}_move_#{move_num + 1}").to_sym, "move #{move_num + 1} : ") %>
   <%= select_tag(("#{locals[:player_id]}_move_#{move_num + 1}").to_sym, options_for_select(["Move", "Rotate Left", "Rotate Right", "Shoot","Fireball"], "Move" ))%>

    <br>
  <% end %>
<% end %>
